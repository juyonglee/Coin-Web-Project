<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="main_page">
    <meta name="author" content="jungee">
    <title>COIN PLACE - 로그인</title>

    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <!-- Custom styles for this template-->
    <link href="../stylesheets/signin.css" rel="stylesheet">
    <script href="../javascript/main-page.js" ></script>
</head>
<body>

<div class="wrapper">
    <header>
        <nav>
            <div class="menu-icon">
                <i class="fa fa-bars fa-2x"></i>
            </div>
            <div class="logo">
                <a  href="/"><img style="width: 75%" src="../images/logo/contents_mainlogo.png"></a>
            </div>

        </nav>
    </header>
</div>

<div class="form-bg">
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <form  style="margin-top: 30%" form method="POST" action="/account/signin" class="form-horizontal horizontal">
                    <span class="heading">로그인</span>
                    <div class="form-group">
                        <input required="" name="username"  type="email" class="form-control" id="exampleInputEmail1" placeholder="Email 입력">
                    </div>
                    <div class="form-group">
                        <input required="" name="password" type="password" class="form-control" placeholder="Password 입력">
                    </div>

                    <div class="form-group">
                        <button type="submit" value="Login" class="btn btn-default">login</button>
                    </div>
                    <p style="color: #eeee">아직 계정이 없으신가요?  &nbsp;&nbsp;&nbsp;<a data-target="#signupmodal" data-toggle="modal" style="font-weight: 200">회원가입</a></p>
                    <p style="color: #eeee">로그인에 문제가 있으신가요? &nbsp;&nbsp;&nbsp; <a data-target="#changepass" data-toggle="modal" style="font-weight: 200">패스워드 재설정</a></p>
                </form>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
</div>

<!-- 회원가입 모달 -->
<div class="modal fade" id="signupmodal" ttabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel"></h4>
            </div>
            <div class="modal-body"  style="padding-left: 5%; padding-right: 5%">
                <form class="form-horizontal" method="POST" action="/account/signup">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email</label>

                        <input required=""  name="username" type="email" class="form-control" id="exampleInputEmail1" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>

                        <input required="" id="password" name="password" type="password" class="form-control" placeholder="Password">

                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password 확인</label>

                        <input id="confirm_password" required="" name="password_check" type="password" class="form-control" placeholder="Password 확인">

                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">이름</label>

                        <input required="" name="name" type="text" class="form-control" placeholder="이름">

                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">핸드폰 번호</label>

                        <input class="form-control" placeholder="010-0000-0000 형식으로 작성해주세요." type="tel" id="phone" name="phoneNumber"
                               pattern="[0-9]{3}-[0-9]{4}-[0-9]{4}"
                               required>
                        <!--<input required="" name="phoneNumber" type="number" >-->

                    </div>
                    <div class="row">
                        <div class="col-xs-6 col-md-6">
                            <div class="checkbox">
                                <label>
                                    <input id="check_1" name="check_1" type="checkbox"> 이용약관 동의
                                </label>
                            </div>
                        </div>
                        <div class="col-xs-6 col-md-6">
                            <div class="checkbox">
                                <label>
                                    <input  id="check_2" name="check_2" type="checkbox"> 개인정보취급방침 동의
                                </label>
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <button type="submit" class="btn btn-default" style="width: 100%; margin-top: 2%">회원가입</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

<!-- 비번 변경 모달 -->
<div class="modal fade" id="changepass" ttabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel"></h4>
            </div>
            <div class="modal-body" style="padding-left: 5%; padding-right: 5%">
                <form class="form-horizontal" method="POST" action="/account/changePassword">

                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <i class="fa fa-lock"></i>
                        <input required="" id="password2" name="password" type="password" class="form-control" placeholder="Password">

                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password 확인</label>
                        <i class="fa fa-lock"></i>
                        <input id="confirm_password2" required="" name="password_check" type="password" class="form-control" placeholder="Password 확인">

                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-default" style="width: 100%">변경</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

</body>
</html>

<script>
    var password = document.getElementById("password"), confirm_password = document.getElementById("confirm_password");
    var password2 = document.getElementById("password2"), confirm_password2 = document.getElementById("confirm_password2");
    var check_1 = document.getElementById("check_1"), check_2 = document.getElementById("check_2");

    function validatePassword(){
        if(password.value != confirm_password.value) {
            confirm_password.setCustomValidity("비밀번호가 일치하지 않습니다.");
        } else {
            confirm_password.setCustomValidity('');
        }
    }

    function validatePassword2(){
        if(password2.value != confirm_password2.value) {
            confirm_password2.setCustomValidity("비밀번호가 일치하지 않습니다.");
        } else {
            confirm_password2.setCustomValidity('');
        }
    }

    password.onchange = validatePassword;
    confirm_password.onkeyup = validatePassword;

    password2.onchange = validatePassword2;
    confirm_password2.onkeyup = validatePassword2;

    console.log("test", check_1.checked);
    function validateCheck(){
        if(check_1.checked == "") {
            console.log("test-동의필요");
            check_1.setCustomValidity("동의 체크를 해주세요.");

        } else {
            check_1.setCustomValidity('');
        }
    }
    check_1.onchange = validateCheck;
    check_1.onkeyup = validateCheck;

</script>
